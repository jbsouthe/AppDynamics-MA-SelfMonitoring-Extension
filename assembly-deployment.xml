<assembly>
    <id>deployment</id>
    <formats>
        <!--
        <format>tar.gz</format>
        <format>tar.bz2</format>
        -->
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>MASelfMonitor</outputDirectory>
            <includes>
                <include>README*</include>
                <include>Changelog.md</include>
                <include>LICENSE</include>
                <include>NOTICE.txt</include>
                <include>monitor.xml</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/lib</directory>
            <outputDirectory>MASelfLogMonitor/lib</outputDirectory>
            <includes>
                <include>log4j-*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>MASelfMonitorExtension-${pom.version}.jar</source>
            <outputDirectory>MASelfMonitor/lib</outputDirectory>
            <destName>MASelfMonitorExtension.jar</destName>
        </file>
    </files>
</assembly>
